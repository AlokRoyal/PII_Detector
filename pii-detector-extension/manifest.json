{
    "manifest_version": 3,
    "name": "PII Detector Extension",
    "version": "1.0",
    "description": "Detects PII in uploaded documents using OCR",
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "images/icon.png"
    },
    "background": {
      "service_worker": "scripts/background.js"
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "icons": {
      "48": "images/icon.png"
    }
  }